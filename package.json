{
  "name": "wanderhome-toolkit",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "npm run build-data && vue-tsc --noEmit && vite build",
    "typecheck": "vue-tsc --noEmit",
    "build-data": "./scripts/build-data.sh",
    "preview": "vite preview",
    "lint": "eslint --ext=.js,.ts,.vue .",
    "format": "prettier -w . && eslint --fix --ext=.js,.ts,.vue .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@popperjs/core": "^2.11.5",
    "@vueuse/core": "^8.7.5",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.9.1",
    "dompurify": "^2.3.8",
    "lodash-es": "^4.17.21",
    "marked": "^4.0.17",
    "pako": "^2.0.4",
    "pdf-lib": "^1.17.1",
    "pinia": "^2.0.14",
    "vue": "^3.2.25",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.1.13",
    "@types/dompurify": "^2.3.3",
    "@types/lodash-es": "^4.17.6",
    "@types/marked": "^4.0.3",
    "@types/node": "^18.0.0",
    "@types/pako": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "eslint": "^8.17.0",
    "eslint-plugin-vue": "^9.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
    "sass": "^1.52.3",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vue-tsc": "^0.38.1",
    "yaml-to-json": "^0.3.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix",
    "*.{js,ts,vue,css,md}": "prettier --write"
  }
}
